<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Đăng nhập xem truyện</title>
  <style>
    body {
      font-family: sans-serif;
      background: #111;
      color: #fff;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }

    #loginBox, #content {
      background: #222;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 0 10px #000;
      max-width: 400px;
      width: 90%;
    }

    input {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      font-size: 16px;
    }

    button {
      padding: 10px 20px;
      font-size: 16px;
      background: #007bff;
      color: white;
      border: none;
      cursor: pointer;
      border-radius: 6px;
    }

    .hidden {
      display: none;
    }

    .error {
      color: #ff6b6b;
      margin-top: 10px;
    }
  </style>
</head>
<body>

  <div id="loginBox">
    <h2>Đăng nhập để xem truyện</h2>
    <input type="text" id="username" placeholder="Tài khoản">
    <input type="password" id="password" placeholder="Mật khẩu">
    <button onclick="login()">Đăng nhập</button>
    <div class="error" id="errorMsg"></div>
  </div>

  <div id="content" class="hidden">
    <h2>🎉 Chào mừng bạn!</h2>
    <p>Bạn đã đăng nhập thành công.</p>
    <img src="https://blogger.googleusercontent.com/img/b/12345/s0/anh1.jpg" style="width: 100%; margin-top: 20px;" />
    <!-- Bạn có thể thêm nội dung truyện tại đây -->
  </div>

  <script>
    const VALID_USER = "admin";
    const VALID_PASS = "binvip123";

    function login() {
      const user = document.getElementById("username").value.trim();
      const pass = document.getElementById("password").value.trim();
      const errorMsg = document.getElementById("errorMsg");

      if (user === VALID_USER && pass === VALID_PASS) {
        document.getElementById("loginBox").classList.add("hidden");
        document.getElementById("content").classList.remove("hidden");
      } else {
        errorMsg.innerText = "❌ Sai tài khoản hoặc mật khẩu!";
      }
    }
  </script>

</body>
</html>
